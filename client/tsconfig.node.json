{
  "extends": "./tsconfig.json",    // Наследуем настройки из основного tsconfig
  "compilerOptions": {
    "noEmit": true,                // Не генерировать файлы
    "target": "ES2022",            // Указываем целевой стандарт ECMAScript
    "lib": ["ES2023"],             // Используем библиотеки для современных стандартов
    "moduleResolution": "node",    // Разрешение модулей как в Node.js
    "skipLibCheck": true,          // Пропускаем проверку библиотек
    "strict": true                 // Включаем строгую проверку типов
  },
  "include": [
    "vite.config.ts"               // Включаем только необходимые файлы
  ]
}
