{
  "extends": "./tsconfig.json",    // Наследуем настройки из основного tsconfig
  "compilerOptions": {
    "noEmit": false,               // Разрешаем генерацию файлов
    "outDir": "./dist",            // Указываем директорию для выводных файлов
    "declaration": true,           // Включаем генерацию .d.ts файлов
    "declarationMap": true,        // Генерация карт для деклараций
    "sourceMap": true              // Генерация карт исходных файлов для дебагинга
  },
  "include": [
    "src/**/*"
  ]
}
